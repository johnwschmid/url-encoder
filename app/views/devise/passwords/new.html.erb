<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'bg-gray-200 px-2 rounded hover:bg-gray-400 mt-2' %>
  </div>
<% end %>
