
<%= form_with model: link do |f| %>
  <div class="flex gap-2 items-center">
    <%= f.url_field :url, class:'px-2 border rounded flex-grow', autofocus: true, placeholder: 'https://example.com' %>
    <%= f.button 'Save', class:'bg-gray-200 px-2 rounded hover:bg-gray-400 cursor-pointer' %>
  </div>
<% end %>